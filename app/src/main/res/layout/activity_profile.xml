<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/arsik"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Марат Арсланов"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/user_photo"
        app:layout_constraintTop_toTopOf="@id/user_photo" />

    <TextView
        android:id="@+id/tv_email_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Email: "
        app:layout_constraintLeft_toLeftOf="@id/user_full_name"
        app:layout_constraintTop_toBottomOf="@id/user_full_name" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="any@email.ru"
        app:layout_constraintLeft_toRightOf="@id/tv_email_t"
        app:layout_constraintBottom_toBottomOf="@id/tv_email_t"
        />

</androidx.constraintlayout.widget.ConstraintLayout>